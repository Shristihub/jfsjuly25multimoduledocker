package com.userapp.service;


import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.kafka.annotation.KafkaListener;
import org.springframework.stereotype.Service;

@Service
public class UserServiceImpl implements IUserService{
	
	private Logger logger = LoggerFactory.getLogger(UserServiceImpl.class);
	private String notifymessage;
	
	// listening to this topic
	@KafkaListener(groupId = "",topics = "mytopic")
	
	//the message is received by this method
	// the data coming in captured by the parameter
 	private void getNotification(String message) {
		notifymessage = message;
		logger.info("Getting notification about product "+message);
	}
	

	@Override
	public String consumeMessage() {
		return notifymessage;
	}

}
